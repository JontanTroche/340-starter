<main>
    <h1><%= title %></h1>

    <%# Flash Message %>
    <% if (messages && messages.length > 0) { %>
        <div class="Flash-messages">
            <%- messages %>
        </div>    
    <% } %>    

    <div class="form">
    <%# Login Form %>
        <form id="loginForm" action="/account/login" method="POST">
            <label for="account_email">Email Address: </label>
            <input type="email" id="account_email" name="account_email" placeholder="Enter your Email" required>
            <label for="account_password">Password: </label>
            <input type="password" id="account_password" name="account_password" placeholder="Enter your password" required>
            <button type="submot">Login</button>
        </form>

        <%# Registration link %>
        <p>No account? <a href="/account/register">Sign-up</a></p>
    </div>
</main>